pipeline {
   agent any 
         stages {

             stage ('Terraform Path')
             {
                 steps
                 {
                 script{
                     def tfHome = tool name: 'Terraform'
                     env.PATH = "${tfHome};${env.PATH}"
                 }
                 bat "terraform --version"
                 }
             }
             
              stage ('Terraform Init') 
              {
                 
                steps
                    {
                     
                       bat "terraform init \\TerraformProjects -plugin-dir=E:\\Workspace\\Git Repository\\TerraformRepo\\.terraform\\plugins\\windows_amd64"
                    }
              }
              
              stage ('Terraform Plan') 
              {
                 
                steps
                    {
                     
                       bat "terraform plan"
                    }
              }
              
         }
}
